<div class="row">
<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td>
					<%= user.name %>
				</td>
				<td>
					<%= link_to "Show", user_path(user), class: "user_#{user.id}" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
<!--users一覧 -->

