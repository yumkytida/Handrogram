<body style="text-align: center;">
  <div class="row">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを覚えておく %>
          </div>
        <% end %>

        <div class="field">
          <%= f.submit "ログイン", class: "btn btn-warning col-xs-2 col-xs-offset-5" %>
        </div>
      <% end %>
  </div>
  <div class="field-signup">
      <div class="field", style="text-align: center;">
        <h4>未登録の方</h4>
      </div>
      <div class="field", style="text-align: center;">
        <%= link_to "新規会員登録", new_registration_path(resource_name), class: "btn btn-warning col-xs-12 col-xs-offset-1" %>
      </div>
  </div>
  <div class="field-signup">
      <div class="field", style="text-align: center;">
        <h4>パスワードをお忘れの方</h4>
      </div>
      <div class="field", style="text-align: center;">
        <%= link_to "パスワード変更", new_password_path(resource_name), class: "btn btn-warning col-xs-12 col-xs-offset-1"  %>
      </div>
  </div>
</body>