<body>
<div class="row">
		<h2>Posts</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td>
						<%= link_to user_path(post.user) do %>
							<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
					<td><%= post.introduction %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
</body>