<% if @post.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @post.errors.count %>errors
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
