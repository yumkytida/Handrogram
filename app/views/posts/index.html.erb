<% if @post.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @post.errors.count %>errors
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
		<h2>Posts index</h2>
		<% @all_ranks.each do |post| %>
		<%= link_to post.title, post_path(book), class: "post_#{post.id}" %>
		<% end %>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td>
						<%= link_to user_path(post.user) do %>
							<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no_image.jpg" %>
						<% end %>
						</td>
						<td><%= link_to post.title, post_path(book), class: "post_#{post.id}" %></td>
						<td><%= post.body %></td>
                    <td>
						<% if post.favorited_by?(current_user) %>
							<li>
							  <%= link_to post_favorites_path(post), method: :delete, class: 'glyphicon glyphicon-heart heart' do %>
							    <%= post.favorites.count %>
							  <% end %>
							</li>
							<% else %>
							<li>
							  <%= link_to post_favorites_path(post), method: :post, class: 'glyphicon glyphicon-heart-empty heart-empty' do %>
							    <%= post.favorites.count %>
							  <% end %>
							</li>
						<% end %>
					</td>
					<td>
						  <li>
						    <%= link_to "コメント数: #{post.post_comments.count}", post_path(post.id) %>
						  </li>
					</td>
				</tr>
			　<% end %>
			</tbody>
		</table>
	</div>
</div>