<div class="row">
	<h2>投稿詳細</h2>
		<div class="row">
					<span>
						<%= link_to user_path(@post.user) do %>
							<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no-image.png" %>
					</span>
					<span><%= @post.user.name %></span>
		</div>
		<div class="row">
					<%= attachment_image_tag @post, :image, format: 'jpeg', class: "pull-center post-img", fallback: "no-image.png" %>
		</div>
		<div class="row">
					<li><%= link_to @post.title, post_path(@post) %></li>
					<li><%= @post.introduction %></li>
					<% end %>
		</div>
		<div class="row">
				<tr>
					<td>
						<p>いいね件数: <%= @post.likes.count %></p>
						<% if current_user.already_liked?(@post) %>
						  <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
						<% else %>
						  <%= button_to 'いいね', post_likes_path(@post) %>
						<% end %>
					</td>
					<% if @post.user == current_user %>
					<td><%= link_to "Edit", edit_post_path(@post), class: "btn-sm btn-success edit_post_#{@post.id}" %></td>
					<td><%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_post_#{@post.id}" %></td>
					<% end %>
				</tr>
		</table>
		<table class="table">
          <tr>
			 <% @post_comments.each do |post_comment| %> 
			 <tr> 
			 	<td class="show-comment"> 
			 		<span><%= link_to user_path(post_comment.user), class: "user_#{post_comment.user.id}" do %>               <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no-image.png", size: "50x50" %></span> 
			 		<span><%= post_comment.user.name %> </span>
			 		<% end %> 
			 	</td> 
			 	<td class="show-comment"><%= post_comment.content %>
			 	</td> 
			 	<% if current_user == post_comment.user %> 
			 	<td><%= link_to "Destroy", post_post_comment_path(@post, post_comment), method: :delete, class: "btn-sm btn-danger " %></td>
			 </tr> 
			 	<% end %> 
      	  </tr>
         <% end %>
        </table>
		<table class="table">
          <tr>
          <td>
          	<%= form_for [@post, @post_comment] do |f| %>
			  <div class="comment">
			      <%= f.text_area :content, class: "form-control" %>
			  </div>
			  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>
          </td>
          </tr>
        </table>
        <p><%= link_to ' 前のページに戻る', posts_path %></p>
</div>